generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

//Modèle User

enum UserRole {
  PATIENT
  PRACTICIONNER
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  firstname  String
  lastname   String
  phone      String?
  role       UserRole
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  patientAppointments Appointement[] @relation("PatientAppointments")
  practicionerAppointments Appointement[] @relation("PracticionerAppointments")
}

//Modèle Appointement (Rendez vous)

enum AppointementType {
  VISIO
  PRESENTIEL
}

enum AppointementStatus {
  SCHEDULED
  CANCELLED
  DONE
}

model Appointement{
  id            String  @id @default(uuid())
  patientId     String
  practionnerId String
  date          DateTime
  type          AppointementType    
  status        AppointementStatus  @default(SCHEDULED)
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  patient     User                  @relation("PatientAppointments", fields: [patientId], references: [id])
  practionner User                  @relation("PracticionerAppointments", fields: [practionnerId], references: [id])
}